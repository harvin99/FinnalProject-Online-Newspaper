<form id="form" class="shadow p-4" method="POST">
    <h2 class="text-center">Reset Password</h2>
    <div class="form-group mt-4">
        <input id="input" type="password" name="newPassword" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp" placeholder="New Password">
        <input id="input" type="password" name="confirmPassword" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp" placeholder="Confirm Password">
        <small id="emailHelp" class="form-text text-danger">{{messErr}}</small>
    </div>
    <button type="submit" class="submit">Submit</button>
</form>
