{{#section "js"}}
{{#if showMessageModal}}
<script>$("#showMessageModal").modal('show')</script>
{{/if}}
{{/section}}
<div class="top-title">
    <h1>Management</h1>
</div>
<div class="content">
    <div class="content__header">
        <h3>Categories</h3>
    </div>

    <div class="content__data">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" colspan="1">#</th>
                    <th scope="col" colspan="2">Name</th>
                    <th scope="col" colspan="2">Slug</th>
                    <th scope="col" colspan="10">SubCategories</th>
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr class="clickable-row" data-href="/admin/categories/edit/{{slug}}">
                    <th scope="row" colspan="1">{{calc @index "+" 1}}</th>
                    <td colspan="2">
                        <div class="text-truncate">{{name}}
                        </div>
                    </td>
                    <td colspan="2">{{slug}}</td>
                    <td colspan="10">{{#each subCategories}}
                        {{#when @index "eq" 0}}
                        <span class="badge badge-info"> {{name}}</span>
                        {{else}}
                        , <span class="badge badge-info"> {{name}}</span>
                        {{/when}}

                        {{/each}}</td>
                    <td colspan="2">
                        <div class="content__data-row__actions"><a href="/admin/categories/{{slug}}/del"
                                class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a><button
                                class="btn btn-info"><i class="fa fa-external-link" aria-hidden="true"></i></button>
                        </div>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>


        {{!-- add new --}}
        <div class="add-new">
            <a href="/admin/categories/add" class="add-new__btn"><i class="fa fa-plus" aria-hidden="true"></i></a>
        </div>
    </div>
</div>

<!-- Modal -->
{{#if showMessageModal}}
<div class="modal fade" id="showMessageModal" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{#with showMessageModal}}
            <div class="modal-header">
                <h5 class="modal-title">{{title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-{{type}}">{{message}}</div>
            </div>
            {{/with}}


        </div>
    </div>
</div>
{{/if}}