{{#section 'css'}}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
{{/section}}
{{#section 'js'}}

<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>


<script>
    $(document).ready(function () {
        $('#select-subCategories').select2({ placeholder: 'Create sub categorie', tags: true, tokenSeparators: [","] });
        $("#select-subCategories").val("{{selectedSubCategories}}".split(",")).trigger('change');




    });

</script>

{{/section}}
<form method="post">

    <div class="top-title">
        <h2>Edit Category <span class="float-right"><button class="btn btn-primary">Save</button></span>
        </h2>

    </div>
    <div class="content">
        <div class="content__header">
            <h3>Category</h3>
        </div>
        <div class="form-group">
            <span><label for="name">Name <span class="text-danger">*</span>:</label>

            </span>
            <input id="name" name="name"
                class="form-control {{formError.name}} {{#if formError.name}}is-invalid{{else}}{{/if}}" type="text"
                value="{{name}}">

            {{#if formError.name}} <div class="invalid-feedback ">
                {{ formError.name}}
            </div>{{/if}}
        </div>
        <div class="form-group">
            <label for="customSlug">Custom slug :</label>
            <input id="customSlug" name="customSlug"
                class="form-control {{#if formError.customSlug}}is-invalid{{else}}{{/if}}" type="text">

            {{#if formError.customSlug}} <div class="invalid-feedback ">
                {{ formError.customSlug}}
            </div>{{/if}}
        </div>
        <div class="form-group">
            <label for="select-subCategories">Sub Categories :</label>
            <select id="select-subCategories" name="subCategories" class="form-control" tabindex="-1" aria-hidden="true"
                multiple>
                {{#each subCategories}}

                <option value="{{name}}">{{name}}</option>

                {{/each}}

            </select>
        </div>




    </div>

</form>