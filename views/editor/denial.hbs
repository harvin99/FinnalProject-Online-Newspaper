{{#section 'css'}}
<style>
    .submit {
        background-color: rgb(3, 144, 217);
        color: #ffff;
        border: none;
        padding: 5px 20px;
        font-weight: 600;
        outline: none;
        transition: background-color .25s linear;
    }

    .submit:hover {
        background-color: rgb(78, 162, 206);
    }

    .submit:focus {
        outline: 0;
    }
</style>
{{/section}}
<div class="w-100" style="background-color: #dddddd;">
    <div class="bg-white w-100" style="height: 80px;"></div>
    <div class="m-3 p-3 bg-white font-weight-bold" style="height: 100vh;">
        <h1>Response</h1>
        <p>Name Post: {{post.title}}</p>
        <p>Writer: {{post.author.username}}</p>
        <p>Status: Từ chối</p>
        <form method="POST">
            <div class="form-group d-flex align-items-center">
                <label for="exampleInputReason">Reason:</label>
                <input name="reason" type="text" class="form-control ml-2" id="exampleInputReason">
            </div>
            <button type="submit" class="submit">Save</button>
        </form>
    </div>
</div>