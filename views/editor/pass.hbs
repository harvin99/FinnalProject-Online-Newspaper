{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.min.css">
{{/section}}
{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script>
        $('select').selectpicker();
    </script>
{{/section}}
<div class="w-100" style="background-color: #dddddd;">
    <div class="bg-white w-100" style="height: 80px;"></div>
    <div class="m-3 p-3 bg-white font-weight-bold" style="height: 100vh;">
        <h1>Response</h1>
        <p>Name Post: {{post.title}}</p>
        <p>Writer: {{post.author}}</p>
        <p>Status: Duyá»‡t</p>
        <form method="POST">
            <div class="form-group d-flex align-items-center">
                <label for="categoryControlSelect">Categories: </label>
                <select name="categorySlug" class="form-control ml-2" id="categoryControlSelect" style="max-width: 300px;">
                    {{#each categories}}
                        <option value="{{slug}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group d-flex align-items-center">
                <label for="tagControlSelect">Tag: </label>
                <select name="tags" class="form-control ml-2 selectpicker" id="tagControlSelect" style="width: 300px;" multiple data-live-search="true">
                    {{#each tags}}
                        <option value="{{slug}}">#{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputDateTime">Reason:</label>
                <input name="time" type="datetime-local" class="form-control" id="exampleInputDateTime">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>