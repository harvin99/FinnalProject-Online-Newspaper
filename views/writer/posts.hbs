<div class="top-title">
    <h1>Management</h1>
</div>
<div class="content">
    <div class="content__header">
        <h3>Posts</h3>
    </div>
    <div class="content__data">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" colspan="1">#</th>
                    <th scope="col" colspan="10">Title</th>
                    <th scope="col" colspan="2">View</th>
                    <th scope="col" colspan="2">Comment</th>
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each posts}}
                <tr class="clickable-row" data-href="./bc">
                    <th scope="row" colspan="1">{{calc @index "+" 1}}</th>
                    <td colspan="10">
                        <div class="text-truncate">{{title}}
                        </div>
                    </td>
                    <td colspan="2">{{view}}</td>
                    <td colspan="2">{{commentCount}}</td>
                    <td colspan="2">
                        <div class="content__data-row__actions"><a href="writer/posts/{{slug}}/del"
                                class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a><button
                                class="btn btn-info"><i class="fa fa-external-link" aria-hidden="true"></i></button>
                        </div>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

        {{>pagination}}
        {{!-- add new --}}
        <div class="add-new">
            <button class="add-new__btn"><i class="fa fa-plus" aria-hidden="true"></i></button>
        </div>
    </div>
</div>